SELECT editalProjeto.id FROM editalProjeto,avaliacoes WHERE tipo in (21,22,23,24) AND valendo=1 AND categoria=1 AND editalProjeto.id=avaliacoes.idProjeto GROUP BY editalProjeto.id HAVING sum(if(recomendacao=1,1,0))-sum(if(recomendacao=0,1,0))>0 ORDER BY editalProjeto.ua,editalProjeto.id

UPDATE editalProjeto SET situacao=1 where id in (SELECT editalProjeto.id FROM editalProjeto,avaliacoes WHERE tipo in (21,22,23,24) AND valendo=1 AND categoria=1 AND editalProjeto.id=avaliacoes.idProjeto GROUP BY editalProjeto.id HAVING sum(if(recomendacao=1,1,0))-sum(if(recomendacao=0,1,0))>0 ORDER BY editalProjeto.ua,editalProjeto.id);
